<!DOCTYPE html>
<html lang="en">
	<head>
		<title>AamAwaam</title>
	</head>
	<body>

		<div class="navbar navbar-custom navbar-fixed-top">
			<div class="navbar-header"><a class="navbar-brand" href="#">AamAwaam</a></div>
		    <div class="navbar-collapse collapse">
		    	<ul class="nav navbar-nav pull-right">
			        <li><a href="#">Welcome User!</a></li>
			        <li><a href="#">Logout</a></li>
			        <li>&nbsp;</li>
			    </ul>
		    </div>
		</div>

		<div id="map-canvas"></div>
			<div class="container-fluid" id="main">
				<div class="row">
					<div class="col-xs-6 col-xs-offset-1" id="left">

						<center><h2>Add Complaint</h2></center>
						<hr>
						<%= form_for(:complaint, :url => {:action => 'create'}, :style=>"width:400px; margin: 0 auto;") do |f| %>

							<div class="required-field-block">
							   <%= f.text_field(:authorID, :class => 'form-control', :placeholder=> "AuthorID") %>
							    <div class="required-icon">
							       <div class="text">*</div>
							    </div>
							</div>

							<hr>

							<div class="required-field-block">
								<%= f.text_field(:description, :size => 140, :class => 'form-control', :placeholder=> "Description") %>
								<div class="required-icon">
								   <div class="text">*</div>
								</div>
							</div>

							<hr>

							<div class="required-field-block">
							   <%= f.text_field(:latitude, :class => 'form-control', :placeholder=> "Latitude") %>
							   <div class="required-icon">
							       <div class="text">*</div>
							   </div>
							</div>

							<hr>
							
							<div class="required-field-block">
							   <%= f.text_field(:longitude, :class => 'form-control', :placeholder=> "Longitude") %>
							   <div class="required-icon">
							       <div class="text">*</div>
							   </div>
							</div>

							<hr>
							
							<%= submit_tag("Create", :class=> 'btn btn-success pull-right') %>
						<% end %>
					</div>
				<div class="col-xs-4"></div>
			</div>
		</div>
	</body>

